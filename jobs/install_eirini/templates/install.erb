#!/bin/bash

set -ex

WORK_DIR=/var/vcap/jobs/install_eirini
KUBECTL=/var/vcap/packages/kubectl/bin
HELM=/var/vcap/packages/helm/bin
export PATH=${HELM}:${KUBECTL}:${PATH}
export KUBECONFIG=$WORK_DIR/config/kube-config.yml
export GOOGLE_APPLICATION_CREDENTIALS=$WORK_DIR/config/service-account.json

main(){
   create-secrets
   helm-install-eirini
}

create-secrets(){
  local secret_name=<%= p("cc_certs_secret_name") %>
  local namespace=scf
  kubectl create secret generic $secret_name --from-file=config/certs --namespace $namespace
}

helm-install-eirini(){
  cd $WORK_DIR
  helm install ./packages/eirini-release/eirini-release/helm/eirini --values ./config/values.yaml --name eirini --namespace=scf
}

main
